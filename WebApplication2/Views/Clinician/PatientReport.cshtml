@model WebApplication2.Models.ViewModels.ClinicianPatientReportVM

@{
    ViewData["Title"] = "Patient report";
}

<h2>Patient report</h2>

<p class="text-muted mb-4">
    <strong>@Model.Name</strong> &mdash;
    Age @Model.Age, @Model.Gender &nbsp;|&nbsp;
    @Model.Condition
</p>

<div class="row mb-4">
    <!-- Current status -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header">
                Current status
            </div>
            <div class="card-body">
                <p>
                    <span class="@Model.StatusCss">@Model.Status</span>
                </p>

                <p class="mb-1">
                    <strong>Last checked:</strong> @Model.LastCheckText
                </p>

                <p class="mb-1">
                    <strong>Last upload:</strong>
                    @if (Model.LastUploadAt.HasValue)
                    {
                        @Model.LastUploadAt.Value.ToString("dd-MM-yyyy HH:mm")
                    }
                    else
                    {
                        <span class="text-muted">No uploads yet</span>
                    }
                </p>

                <p class="mb-1">
                    <strong>Total uploads:</strong> @Model.TotalUploads
                </p>

                <p class="mb-0">
                    <strong>Latest PPI:</strong> @Model.LatestPeakPressureIndex<br />
                    <strong>Latest contact area %:</strong> @Model.LatestContactAreaPct.ToString("0.0")%
                </p>
            </div>
        </div>
    </div>

    <!-- Risk score -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header">
                Risk score
            </div>
            <div class="card-body">
                <p>
                    <span class="@Model.RiskCss">@Model.RiskLabel</span>
                </p>
                <p class="text-muted mb-0">
                    Risk score label:
                    <strong>@Model.RiskScore</strong>
                </p>
            </div>
        </div>
    </div>

    <!-- Assigned info -->
    <div class="col-md-4">
        <div class="card h-100">
            <div class="card-header">
                Assignment
            </div>
            <div class="card-body">
                <p>
                    <strong>Assigned:</strong>
                    @Model.AssignedAt.ToString("dd-MM-yyyy")
                </p>
                <p class="text-muted mb-0">
                    This patient is currently supervised by you in GrapheneTrace.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row g-3">
    <!-- Recent alerts -->
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">
                Recent alerts
            </div>
            <div class="card-body">
                @if (!Model.RecentAlerts.Any())
                {
                    <p class="text-muted mb-0">No alerts recorded.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var a in Model.RecentAlerts)
                        {
                            <li class="list-group-item">
                                <div class="small text-muted">@a.WhenText (@a.TimestampText)</div>
                                <div>
                                    <span class="badge bg-danger me-1">@a.Severity</span>
                                    @a.Message
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>

    <!-- Upload history -->
    <div class="col-lg-6">
        <div class="card h-100">
            <div class="card-header">
                Upload history
            </div>
            <div class="card-body">
                @if (!Model.UploadHistory.Any())
                {
                    <p class="text-muted mb-0">No uploads yet.</p>
                }
                else
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>PPI</th>
                                <th>CA %</th>
                                <th>Severity</th>
                                <th>File</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model.UploadHistory)
                            {
                                <tr>
                                    <td>@u.TimestampText</td>
                                    <td>@u.Ppi</td>
                                    <td>@u.ContactAreaPct.ToString("0.0")%</td>
                                    <td>@u.Severity</td>
                                    <td class="text-truncate" style="max-width: 140px;">
                                        @u.SourceFile
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>
