@using WebApplication2.Models.ViewModels
@model ClinicianDashboardVM

@{
    ViewData["Title"] = "Clinician Dashboard";
}

<h1 class="mb-3">Clinician Dashboard</h1>

<!-- === KPI CARDS ROW === -->
<div class="row g-3 mb-4">
    <div class="col-12 col-md-3">
        @await Html.PartialAsync("_KpiCard",
            new KpiCardVM {
                Title = "Total Frames",
                Value = Model.TotalFrames.ToString("N0"),
                BadgeCss = "badge bg-primary",
                BadgeText = "",
                Hint = "All time"
            })
    </div>

    <div class="col-12 col-md-3">
        @await Html.PartialAsync("_KpiCard",
            new KpiCardVM {
                Title = "Today's Uploads",
                Value = Model.TodaysUploads.ToString("N0"),
                BadgeCss = "badge bg-success",
                BadgeText = "",
                Hint = "Since midnight"
            })
    </div>

    <div class="col-12 col-md-3">
        @await Html.PartialAsync("_KpiCard",
            new KpiCardVM {
                Title = "Distinct Patients",
                Value = Model.DistinctPatients.ToString("N0"),
                BadgeCss = "badge bg-info",
                BadgeText = "",
                Hint = "With any session"
            })
    </div>

    <div class="col-12 col-md-3">
        @await Html.PartialAsync("_KpiCard",
            new KpiCardVM {
                Title = "Last Upload",
                Value = (Model.LastUploadAt?.ToLocalTime().ToString("MMM dd, yyyy, hh:mm tt")) ?? "—",
                BadgeCss = "badge bg-secondary",
                BadgeText = "",
                Hint = ""
            })
    </div>
</div>

<div class="row g-4">

    <!-- Recent Uploads -->
    <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Recent Uploads</div>
            <div class="card-body p-0">
                @if (Model.RecentUploads == null || !Model.RecentUploads.Any())
                {
                    <div class="p-3 text-muted">No recent uploads.</div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Patient</th>
                                    <th>Date</th>
                                    <th>Frames</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var u in Model.RecentUploads)
                                {
                                    var statusClass = u.Status == "Completed"
                                        ? "bg-success"
                                        : (u.Status == "Failed" ? "bg-danger" : "bg-info");

                                    <tr>
                                        <td>@u.Id</td>
                                        <td>@u.Patient</td>
                                        <td>@u.UploadedAt.ToLocalTime().ToString("MMM dd, yyyy h:mm tt")</td>
                                        <td>@u.Frames</td>
                                        <td>
                                            <span class="badge @statusClass">
                                                @u.Status
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>

            <div class="card-footer d-flex gap-2">
                <a asp-controller="Clinician" asp-action="Upload" class="btn btn-outline-primary btn-sm">Upload CSV</a>
                <a asp-controller="Clinician" asp-action="Patients" class="btn btn-outline-secondary btn-sm">View All Records</a>
                <a class="btn btn-outline-dark btn-sm" href="#">Download Sample CSV</a>
            </div>
        </div>
    </div>

    <!-- Alerts + Notes -->
    <div class="col-12 col-lg-4">
        <div class="card mb-4 shadow-sm">
            <div class="card-header fw-semibold">Alerts</div>
            <div class="card-body">
                @if (Model.Alerts == null || !Model.Alerts.Any())
                {
                    <div class="text-muted">No alerts at this time.</div>
                }
                else
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var a in Model.Alerts)
                        {
                            <li class="mb-2">
                                <span class="fw-semibold">@a.Title</span>
                                <span class="text-muted"> — @a.Detail</span>
                                <div class="small text-muted">
                                    @a.When.ToLocalTime().ToString("MMM dd, h:mm tt")
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>

        </div>

        <div class="card shadow-sm">
            <div class="card-header fw-semibold">Notes</div>
            <div class="card-bod
                <form asp-action="Index" method="post">
                    @Html.AntiForgeryToken()
                    <textarea name="notes" class="form-control mb-2" rows="4"
                              placeholder="Type private notes for your next check...">@Model.Notes</textarea>
                    <button type="submit" class="btn btn-primary btn-sm">Save Notes</button>
                </form>
            </div>
        </div>
    </div>

</div>

@{
    var toast = TempData["Toast"] as string;
}
@if (!string.IsNullOrWhiteSpace(toast))
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1080">
        <div class="toast show align-items-center text-bg-success border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body fw-semibold">
                    @toast
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        window.setTimeout(() => {
            const el = document.querySelector('.toast.show');
            if (el) bootstrap.Toast.getOrCreateInstance(el).hide();
        }, 3000);
    </script>
}
