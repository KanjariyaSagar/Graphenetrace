@{
    ViewData["Title"] = "Comments";
}

<div class="container mt-4">
    <h2>Comments</h2>
    <p class="text-muted">View and respond to patient messages.</p>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h6><strong>Mary Smith</strong></h6>
            <p>“Feeling mild discomfort today. Should I adjust the pressure?”</p>
            <form>
                <textarea class="form-control" rows="2" placeholder="Type your reply..."></textarea>
                <button class="btn btn-primary btn-sm mt-2">Send Reply</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h6><strong>Alex Johnson</strong></h6>
            <p>“Device shows red alert but no pain felt.”</p>
            <form>
                <textarea class="form-control" rows="2" placeholder="Type your reply..."></textarea>
                <button class="btn btn-primary btn-sm mt-2">Send Reply</button>
            </form>
        </div>
    </div>
</div>

