@model WebApplication2.Models.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Create account";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Register" method="post" novalidate>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Password" class="form-control" type="password" required />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Create account</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
